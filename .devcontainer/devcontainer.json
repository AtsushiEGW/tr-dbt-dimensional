{
  "name": "dimensional modeling container",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspace/project",
  "shutdownAction": "stopCompose",

  // ホスト dotfiles をマウント
  "mounts": [
    "source=${localEnv:HOME}/.dotfiles,target=/home/dev/.dotfiles,type=bind,consistency=cached"
  ],

  // コンテナ起動後に dotfiles のインストールと Python 依存解決を実行
  "postCreateCommand": "chmod +x /home/dev/.dotfiles/install_for_linux.sh && /home/dev/.dotfiles/install_for_linux.sh && pip install --no-cache-dir -r /workspace/project/requirements.txt && source ~/.zshrc",

  // VS Code ポートフォワード
  "forwardPorts": [5432, 3000],
  "remoteUser": "dev",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoSearchPaths": true,
        "python.analysis.useLibraryCodeForTypes": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "terminal.integrated.shell.linux": "/bin/bash/zsh"
      }
    }
  }
}